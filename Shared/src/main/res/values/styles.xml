<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_white</item>
        <item name="android:textViewStyle">@style/text_style</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="editTextStyle">@style/edit_text_style</item>
        <item name="materialButtonStyle">@style/btn</item>
        <item name="spinnerStyle">@style/spinner_style</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/tahoma</item>
        <item name="checkboxStyle">@style/LentaCheckbox</item>
        <item name="recyclerViewStyle">@style/recycler_view_style</item>

    </style>

    <style name="AppThemeFilterSpinner" parent="AppTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyleFilter</item>
    </style>

    <style name="btn" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">65dp</item>
        <item name="backgroundTint">@color/button_bg_color</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAppearance">@style/TextMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="iconTint">@color/color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="LentaCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check_box</item>
        <item name="android:background">@drawable/bg_border_rectangle_for_checkbox</item>
    </style>

    <style name="Button" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">72dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/bg_border_rectangle</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:dropDownVerticalOffset">16dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_border_rectangle</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="recycler_view_style">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:drawableRight">@drawable/selector_spinner_arrow</item>
        <item name="android:textColor">@color/spinner_text_color</item>
    </style>

    <style name="SpinnerItemStyleFilter" parent="SpinnerItemStyle">
        <item name="android:drawableRight">@drawable/ic_filter_white_16dp</item>
    </style>

    <style name="DBManagerVisib">
        <item name="android:visibility">visible</item>
    </style>

    <style name="TextMedium" parent="Base.TextAppearance.AppCompat.Medium"></style>

    <style name="TextTitleToolbar" parent="Base.TextAppearance.AppCompat.Body1"></style>

    <style name="TextDescriptionToolbar" parent="Base.TextAppearance.AppCompat.Body2"></style>

    <style name="TextTitle">
        <item name="android:textColor">@color/color_text_title_header</item>
    </style>

    <style name="BaseTxt">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
    </style>

    <style name="editTxt">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/frame_fields</item>
    </style>

    <style name="SearchEditTxt">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingRight">38sp</item>
        <item name="android:background">@drawable/frame_fields</item>
    </style>

    <style name="TopPanelTxtTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTopPanelTxt</item>
    </style>

    <style name="TopPanelTxtHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTopPanelTxt</item>
    </style>

    <style name="ButtonDialogBotPanel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96px</item>
        <item name="android:minHeight">96px</item>
        <item name="android:background">@color/colorBottomPanelBackground</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorContentBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorContentBackground</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="divider_horz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="divider_vert">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--<style name="TabLayout">
        <item name="android:background">@color/colorTabBackground</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@color/colorTabIndicator</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabSelectedTextColor">@color/colorTabIndicator</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>-->

    <style name="NumberSectionTxt">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/tahoma_bold</item>
        <item name="android:textColor">@color/colorNumSectionTxt</item>
        <item name="android:background">@drawable/bg_white_circle</item>
    </style>

    <style name="SupportTxtKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SupportTxtValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.67</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!-- START - Разметка табличных макетов -->
    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="LinearRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_row_height</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearCellStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CellTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CellEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FirstRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="FirstRowTextStyle" parent="CellTextStyle">
        <item name="android:textColor">@color/color_text_title_header</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CellSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <!-- END - Разметка табличных макетов -->

    <style name="EnterNumberFieldLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="EnterNumberField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OpenItemButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_keyboard_arrow_right_white_16dp</item>
    </style>

</resources>