<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_transparent_checkbox_disable" />
            <stroke android:width="1dp" android:color="@color/color_divider" />
        </shape>
    </item>

    <item android:state_focused="true">

        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/colorWhite" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorWhite" />
        </shape>
    </item>
</selector>