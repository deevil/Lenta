<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.open_task.task_card.TaskCardOpenFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.open_task.task_card.TaskCardOpenViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Тип задания -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:enabled="false"
                    android:text="@{vm.ui.type}"
                    android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                    tools:text="Возврат брака прямому поставщику" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Наименование задания -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:enabled="false"
                    android:text="@{vm.ui.name}"
                    tools:text="Возврат от 05.08.2020 15:16" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Причина для возврата -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{vm.ui.provider}"
                    android:textColor="@color/color_text_title_header"
                    tools:text="568932 ООО Микоян" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Склад -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/storage"
                    android:textColor="@color/color_text_title_header" />

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/from"
                    android:textColor="@color/color_text_title_header" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:enabled="false"
                    android:text="@{vm.ui.storage}"
                    android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                    tools:text="0010" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Поставщик -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:enabled="false"
                    android:text="@{vm.ui.reason}"
                    android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                    tools:text="Нарушение товарного вида" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>