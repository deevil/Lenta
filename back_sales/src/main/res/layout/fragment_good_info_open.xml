<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.open_task.good_info.GoodInfoOpenFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.open_task.good_info.GoodInfoOpenViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Количество -->
            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <EditText
                        style="@style/CellEditTextStyle"
                        android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                        android:enabled="false"
                        android:text="@{vm.accountingType}"
                        tools:text="Количество" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <com.lenta.shared.view.EditTextWithSuffix
                        style="@style/CellEditTextStyle"
                        android:enabled="@{vm.quantityFieldEnabled}"
                        android:text="@={vm.quantityField}"
                        app:digitsForUom="@{vm.good.units}"
                        app:quantityTypeIcon="@{true}"
                        app:suffix="@{vm.good.units.name}"
                        tools:drawableEnd="@drawable/ic_bei_12dp"
                        tools:text="1 шт" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <!-- Итого -->
            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.totalTitle}"
                        android:textColor="@color/color_text_title_header"
                        tools:text="Итого" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.totalWithUnits}"
                        tools:text="1 шт" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <!-- Производитель -->
            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/CellEditTextStyle"
                        android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                        android:enabled="false"
                        android:text="@{vm.good.provider.name}"
                        tools:text="123123 ООО Поставщик" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <!-- Алкогольная часть -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{!vm.isCompactMode}">

                <!-- Импортер -->
                <LinearLayout style="@style/LinearRowStyle">

                    <LinearLayout
                        style="@style/LinearCellStyle"
                        android:layout_weight="1">

                        <com.lenta.shared.view.ClickableSpinner
                            android:id="@+id/spin_importer"
                            style="@style/CellSpinnerStyle"
                            android:layout_height="match_parent"
                            android:enabled="@{vm.producerEnabled}"
                            app:items="@{vm.producerList}"
                            app:onPositionClickListener="@{vm.onSelectProducer}"
                            app:position="@{vm.producerPosition}"
                            tools:entries="@array/test_list" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/HorizontalDivider" />

                <!-- Дата партии -->
                <LinearLayout style="@style/LinearRowStyle">

                    <LinearLayout
                        style="@style/LinearCellStyle"
                        android:layout_weight="1">

                        <TextView
                            style="@style/CellTextStyle"
                            android:text="@string/consignment"
                            android:textColor="@color/color_text_title_header" />

                        <TextView
                            style="@style/CellTextStyle"
                            android:text="@string/with_bottling_date"
                            android:textColor="@color/color_text_title_header" />

                    </LinearLayout>

                    <View style="@style/VerticalDivider" />

                    <LinearLayout
                        style="@style/LinearCellStyle"
                        android:layout_weight="1">

                        <EditText
                            style="@style/CellEditTextStyle"
                            android:digits="1234567890."
                            android:enabled="@{vm.dateEnabled}"
                            android:inputType="number"
                            android:text="@={vm.date}"
                            app:maskPattern='@{"[00]{.}[00]{.}[0000]"}'
                            tools:text="25.12.2016" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/HorizontalDivider" />

            </LinearLayout>

        </LinearLayout>

        <!-- Иконки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_white_circle"
                    android:gravity="center"
                    android:textSize="12sp"
                    app:matrixType="@{vm.good.matrix}"
                    tools:text="A" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_white_circle"
                    android:gravity="center"
                    android:textSize="12sp"
                    app:section="@{vm.good.section}"
                    tools:text="02" />

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:goodKindIcon="@{vm.good.kind}"
                tools:src="@drawable/ic_excise_alcohol_white_32dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_clear_basket_32dp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:onClick="@{(v) -> vm.navigator.openBoxInfoScreen()}"
                android:src="@drawable/ic_scan_box_white_32dp"
                app:invisible="@{!vm.markScanEnabled}" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:onClick="@{(v) -> vm.navigator.openESInfoScreen()}"
                android:src="@drawable/ic_scan_barcode_es_white_32dp"
                app:invisible="@{!vm.markScanEnabled}" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:onClick="@{(v) -> vm.navigator.openEanInfoScreen()}"
                android:src="@drawable/ic_scan_barcode_white_32dp" />

        </LinearLayout>

    </FrameLayout>

</layout>