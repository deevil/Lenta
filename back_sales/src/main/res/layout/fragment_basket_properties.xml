<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.basket.basket_properties.BasketPropertiesFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.basket.basket_properties.BasketPropertiesViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Секция -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:textColor="@color/color_text_title_header"
                    android:text="@string/section" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_remaining_quantity"
                    style="@style/CellTextStyle"
                    android:text="@{vm.properties.section}"
                    tools:text="02" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Вид товара -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:textColor="@color/color_text_title_header"
                    android:text="@string/good_type" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_removed_good"
                    style="@style/CellTextStyle"
                    android:text="@{vm.properties.goodType}"
                    tools:text="1HAW" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- ГИС-контроль -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:textColor="@color/color_text_title_header"
                    android:text="@string/gis_control" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{vm.properties.gisControl}"
                    tools:text="Обычный товар" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Поставщик -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:textColor="@color/color_text_title_header"
                    android:text="@string/provider" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_promotion_name"
                    style="@style/CellTextStyle"
                    android:text="@{vm.properties.provider}"
                    tools:text="106453 Поставщик 4" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>