<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lenta.bp14.features.work_list.goods_list.GoodsListWlFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.open_task.task_list.TaskListViewModel" />

        <variable
            name="rvConfig"
            type="com.lenta.shared.utilities.databinding.DataBindingRecyclerViewConfig" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Наименования колонок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/FirstRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/task_tag_quantity_column_1">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:layout_width="wrap_content"
                        android:text="@string/number" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/task_tag_quantity_column_2">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/task" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/task_tag_quantity_column_3">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/tags" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/task_tag_quantity_column_4">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/of_goods" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

        </LinearLayout>

        <!-- Список корзин -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:items="@{vm.search}"
            app:rv_config="@{rvConfig}"
            tools:listitem="@layout/item_task_list_task" />

        <!-- Ввод номера товара -->
        <LinearLayout style="@style/EnterNumberFieldLayout">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:digits="0123456789"
                android:drawableEnd="@drawable/ic_filter_white_16"
                android:ellipsize="end"
                android:hint="@string/enter_task_or_supplier_number"
                android:imeOptions="actionGo"
                android:inputType="number"
                android:maxLength="20"
                android:maxLines="1"
                android:text="@={vm.numberField}"
                app:onOkInSoftKeyboard="@{vm}"
                app:requestFocus="@{vm.requestFocusToNumberField}"
                tools:ignore="Autofill" />

        </LinearLayout>

    </LinearLayout>

</layout>