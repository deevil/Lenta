<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.task_card.TaskCardFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.task_card.TaskCardViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Тип задания -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <com.lenta.shared.view.ClickableSpinner
                    android:id="@+id/spin_task_type"
                    style="@style/CellSpinnerStyle"
                    android:layout_height="match_parent"
                    android:enabled="@{vm.cardEditable}"
                    app:items="@{vm.taskTypeList}"
                    app:onPositionClickListener="@{vm.onSelectTaskType}"
                    app:position="@{vm.taskTypePosition}"
                    tools:entries="@array/test_list" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Наименование задания -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:enabled="@{vm.cardEditable}"
                    android:text="@={vm.taskName}" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Причина для возврата -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <com.lenta.shared.view.ClickableSpinner
                    android:id="@+id/spin_reason_for_return"
                    style="@style/CellSpinnerStyle"
                    android:layout_height="match_parent"
                    android:enabled="@{vm.cardEditable}"
                    app:items="@{vm.reasonForReturnList}"
                    app:onPositionClickListener="@{vm.onSelectReasonForReturn}"
                    app:position="@{vm.reasonForReturnPosition}"
                    tools:entries="@array/test_list" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Склад -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/storage"
                    android:textColor="@color/color_text_title_header" />

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/from"
                    android:textColor="@color/color_text_title_header" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <com.lenta.shared.view.ClickableSpinner
                    android:id="@+id/spin_storage"
                    style="@style/CellSpinnerStyle"
                    android:layout_height="match_parent"
                    android:enabled="@{vm.cardEditable}"
                    app:items="@{vm.storageList}"
                    app:onPositionClickListener="@{vm.onSelectStorage}"
                    app:position="@{vm.storagePosition}"
                    tools:entries="@array/test_list" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

        <!-- Поставщик -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{vm.ui.provider}"
                    android:textColor="@color/color_text_title_header"
                    tools:text="568932 ООО Микоян" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>