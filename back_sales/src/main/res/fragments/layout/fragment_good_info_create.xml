<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.create_task.good_info.GoodInfoCreateFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.create_task.good_info.GoodInfoCreateViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Количество -->
            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout style="@style/LinearCellStyle">

                    <EditText
                        style="@style/CellEditTextStyle"
                        android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                        android:enabled="false"
                        android:focusable="false"
                        android:text="@{vm.accountingType}"
                        tools:text="Количество" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <com.lenta.shared.view.EditTextWithSuffix
                        style="@style/CellEditTextStyle"
                        android:afterTextChanged="@{vm}"
                        android:enabled="@{vm.quantityFieldEnabled}"
                        android:text="@={vm.quantityField}"
                        app:digitsForUom="@{vm.good.commonUnits}"
                        app:onOkInSoftKeyboard="@{vm}"
                        app:quantityTypeIcon="@{vm.good.isDifferentUnits()}"
                        app:requestFocus="@{vm.quantityFieldEnabled}"
                        app:suffix="@{vm.good.commonUnits.name}"
                        tools:drawableEnd="@drawable/ic_bei_12dp"
                        tools:text="1 шт" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <!-- Итого -->
            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.totalTitle}"
                        android:textColor="@color/color_text_title_header"
                        tools:text="Итого" />

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.basketTitle}"
                        android:textColor="@color/color_text_title_header"
                        tools:text="По корзине" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.totalWithUnits}"
                        tools:text="1 шт" />

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@{vm.basketQuantityWithUnits}"
                        tools:text="1 шт" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <!-- Поставщик -->
            <LinearLayout
                style="@style/LinearRowStyle"
                android:visibility="@{!vm.isWholesaleTaskType}">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_provider"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        android:enabled="@{vm.providerEnabled}"
                        app:items="@{vm.providerList}"
                        app:position="@={vm.providerPosition}"
                        tools:entries="@array/test_list" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_increase_quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_border_rectangle"
                    android:foreground="?selectableItemBackground"
                    android:onClick="@{(v) -> vm.addProvider()}"
                    android:src="@drawable/ic_add_white_24dp" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:visibility="@{!vm.isWholesaleTaskType}" />

            <!-- Алкогольная часть -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{!vm.isCommonGood}">

                <!-- Производитель -->
                <LinearLayout style="@style/LinearRowStyle">

                    <LinearLayout style="@style/LinearCellStyle">

                        <com.lenta.shared.view.ClickableSpinner
                            android:id="@+id/spin_importer"
                            style="@style/CellSpinnerStyle"
                            android:layout_height="match_parent"
                            android:enabled="@{vm.producerEnabled}"
                            app:items="@{vm.producerList}"
                            app:position="@={vm.producerPosition}"
                            tools:entries="@array/test_list" />

                    </LinearLayout>

                </LinearLayout>

                <View style="@style/HorizontalDivider" />

                <!-- Дата партии -->
                <LinearLayout style="@style/LinearRowStyle">

                    <LinearLayout style="@style/LinearCellStyle">

                        <TextView
                            style="@style/CellTextStyle"
                            android:text="@string/consignment"
                            android:textColor="@color/color_text_title_header" />

                        <TextView
                            style="@style/CellTextStyle"
                            android:text="@string/with_bottling_date"
                            android:textColor="@color/color_text_title_header" />

                    </LinearLayout>

                    <View style="@style/VerticalDivider" />

                    <LinearLayout style="@style/LinearCellStyle">

                        <EditText
                            android:id="@+id/bottlingDate"
                            style="@style/CellEditTextStyle"
                            android:digits="1234567890."
                            android:enabled="@{vm.dateEnabled}"
                            android:inputType="number"
                            android:text="@={vm.date}"
                            app:maskPattern='@{"[00]{.}[00]{.}[0000]"}'
                            tools:text="25.12.2016" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/HorizontalDivider"
                    android:visibility="@{!vm.isCommonGood}" />

            </LinearLayout>

        </LinearLayout>

        <!-- Блок с иконками -->
        <LinearLayout style="@style/BottomIconBarStyle">

            <LinearLayout style="@style/BottomIconContainerStyle">

                <TextView
                    style="@style/BottomCircleIconStyle"
                    app:matrixType="@{vm.good.matrix}"
                    tools:text="A" />

            </LinearLayout>

            <LinearLayout style="@style/BottomIconContainerStyle">

                <TextView
                    style="@style/BottomCircleIconStyle"
                    android:visibility="@{!vm.good.section.isEmpty()}"
                    app:section="@{vm.good.section}"
                    tools:text="02" />

            </LinearLayout>

            <ImageView
                style="@style/BottomIconStyle"
                app:goodKindIcon="@{vm.good.kind}"
                tools:src="@drawable/ic_excise_alcohol_white_32dp" />

            <FrameLayout style="@style/BottomIconStyle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clear_basket_32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:text="@{vm.basketNumber}"
                    android:textColor="@color/button_bg_color"
                    android:textSize="12sp"
                    tools:text="5" />

            </FrameLayout>

            <ImageView
                style="@style/BottomIconStyle"
                android:onClick="@{(v) -> vm.navigator.openBoxInfoScreen()}"
                android:src="@drawable/ic_scan_box_white_32dp"
                app:invisible="@{!vm.markScanEnabled}" />

            <ImageView
                style="@style/BottomIconStyle"
                android:onClick="@{(v) -> vm.navigator.openESInfoScreen()}"
                android:src="@drawable/ic_scan_barcode_es_white_32dp"
                app:invisible="@{!vm.markScanEnabled}" />

            <ImageView
                style="@style/BottomIconStyle"
                android:onClick="@{(v) -> vm.navigator.openEanInfoScreen()}"
                android:src="@drawable/ic_scan_barcode_white_32dp" />

        </LinearLayout>

    </FrameLayout>

</layout>