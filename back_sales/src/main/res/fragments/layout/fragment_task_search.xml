<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.open_task.task_search.TaskSearchFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp12.features.open_task.task_search.TaskSearchViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Поставщик -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout style="@style/LinearCellStyle">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/provider" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:text="@={vm.provider}"
                    app:onOkInSoftKeyboard="@{vm}"
                    app:requestFocus="@{vm.requestFocusToProvider}"
                    tools:text="314785" />

            </LinearLayout>

        </LinearLayout>

        <!-- Товар -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout style="@style/LinearCellStyle">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/good" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:text="@={vm.goodNumber}"
                    app:onOkInSoftKeyboard="@{vm}" />

            </LinearLayout>

        </LinearLayout>

        <!-- Марка -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout style="@style/LinearCellStyle">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/mark" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:text="@={vm.exciseNumber}"
                    app:onOkInSoftKeyboard="@{vm}" />

            </LinearLayout>

        </LinearLayout>

        <!-- Секция -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout style="@style/LinearCellStyle">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/section" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:text="@={vm.section}"
                    app:onOkInSoftKeyboard="@{vm}" />

            </LinearLayout>

        </LinearLayout>

        <!-- Клиент -->
        <LinearLayout style="@style/LinearRowStyle">

            <LinearLayout style="@style/LinearCellStyle">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/client" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:text="@={vm.client}"
                    app:onOkInSoftKeyboard="@{vm}" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Блок с иконками -->
            <LinearLayout style="@style/BottomIconBarStyle">

                <View style="@style/BottomIconEmptyPlaceStyle" />

                <View style="@style/BottomIconEmptyPlaceStyle" />

                <View style="@style/BottomIconEmptyPlaceStyle" />

                <View style="@style/BottomIconEmptyPlaceStyle" />

                <View style="@style/BottomIconEmptyPlaceStyle" />

                <ImageView
                    style="@style/BottomIconStyle"
                    android:onClick="@{(v) -> vm.navigator.openESInfoScreen()}"
                    android:src="@drawable/ic_scan_barcode_es_white_32dp" />

                <ImageView
                    style="@style/BottomIconStyle"
                    android:onClick="@{(v) -> vm.navigator.openEanInfoScreen()}"
                    android:src="@drawable/ic_scan_barcode_white_32dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</layout>