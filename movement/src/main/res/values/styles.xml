<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple500</item>
        <item name="colorPrimaryDark">@color/purple700</item>
        <item name="colorAccent">@color/teal200</item>
    </style>

    <style name="DisabledEditText">
        <item name="android:textColor">@color/color_text_blue</item>
        <item name="android:background">@drawable/disabled_border</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>