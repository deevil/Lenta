<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.good_info_facing.GoodInfoFacingFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/count"/>

                </LinearLayout>

                <View
                    style="@style/VerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_goods_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp"
                        android:textSize="@dimen/text_14sp"
                        style="@style/CellEditTextStyle"
                        tools:text="10 кг"/>

                </LinearLayout>


            </LinearLayout>

            <View
                style="@style/HorizontalDivider"/>

            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/storage_sender"/>

                </LinearLayout>

                <View
                    style="@style/VerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_storage_sender"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        tools:entries="@array/storage_list" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"/>

            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/storage_receiver"/>

                </LinearLayout>

                <View
                    style="@style/VerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_storage_receiver"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        tools:entries="@array/storage_list" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"/>

            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/container"/>

                </LinearLayout>

                <View
                    style="@style/VerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_сontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp"
                        android:textSize="@dimen/text_14sp"
                        style="@style/CellEditTextStyle"
                        tools:text="123"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"/>

        </LinearLayout>

    </FrameLayout>

</layout>