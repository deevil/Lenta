<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <data>

        <variable
            name="vm"
            type="com.lenta.movement.features.task.TaskViewModel" />

        <variable
            name="viewPagerSettings"
            type="com.lenta.shared.utilities.databinding.ViewPagerSettings" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:pageSelectionListener="@{vm}"
            app:tabPosition="@{vm.selectedPagePosition}"
            app:viewPagerSettings="@{viewPagerSettings}">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_strip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_strip_height"
                android:background="@color/colorBottomPanelBackground"
                android:elevation="0dp"
                android:textSize="@dimen/text_14sp"
                app:tabIndicatorColor="@color/colorTabIndicator"
                app:tabIndicatorHeight="@dimen/size_4dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorTabIndicator"
                app:tabTextAppearance="@style/TabLayoutStyle"
                app:tabTextColor="@color/colorWhite"
                tools:targetApi="lollipop" />
        </androidx.viewpager.widget.ViewPager>

        <ImageView
            android:id="@+id/alcoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:src="@drawable/ic_excise_alcohol_white_32dp"
            android:visibility="@{vm.alcoVisible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/generalImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginBottom="@dimen/size_8dp"
            android:src="@drawable/ic_kandy_white_32dp"
            android:visibility="@{vm.generalVisible}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/alcoImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>