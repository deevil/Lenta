<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                     
                                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/layout_task_status_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.lenta.movement.view.BorderedTableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/task_settings_status_current_state_title"
                    android:layout_margin="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:tag="binding_1"               
                    tools:text="Создано"
                    android:layout_margin="16dp"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/task_settings_status_next_state_title"
                    android:layout_margin="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:tag="binding_2"            
                    tools:text="Посчитано"
                    android:layout_margin="16dp"/>
            </TableRow>

        </com.lenta.movement.view.BorderedTableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         