<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.good_info_facing.GoodInfoFacingFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.lenta.bp16.features.good_info.GoodInfoViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/quantity" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <com.lenta.shared.view.EditTextWithSuffix
                        android:id="@+id/et_goods_count"
                        style="@style/CellEditTextStyle"
                        suffix="@{vm.suffix}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:digitsForUom="@{vm.buom}"
                        android:inputType="number"
                        android:paddingStart="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp"
                        android:text="@={vm.quantityField}"
                        android:textSize="@dimen/text_14sp"
                        app:requestFocus="@{vm.requestFocusQuantityField}"
                        tools:text="10 кг" />

                </LinearLayout>


            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:visibility="@{vm.ZPartFlag}" />

            <LinearLayout
                style="@style/LinearRowStyle"
                android:visibility="@{vm.ZPartFlag}">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_producer"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        app:items="@{vm.producerNameField}"
                        app:position="@={vm.selectedProducerPosition}"
                        tools:entries="@array/manufacturer_list" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:visibility="@{vm.ZPartFlag}" />

            <LinearLayout
                style="@style/LinearRowStyle"
                android:visibility="@{vm.ZPartFlag}">

                <LinearLayout style="@style/LinearCellStyle">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_production_date"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        app:items="@{vm.dateInfo}"
                        app:position="@={vm.selectedDatePosition}"
                        tools:entries="@array/date_list" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <EditText
                        style="@style/CellEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp"
                        android:text="@={vm.dateInfoField}"
                        android:textSize="@dimen/text_14sp"
                        android:inputType="number"
                        android:digits="0123456789 -."
                        app:maskPattern='@{"[00]{.}[00]{.}[0000]"}'
                        app:requestFocus="@{vm.requestFocusDateInfoField}"
                        tools:text="21.06.2020" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/storage_sender" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_warehouse_sender"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        app:items="@{vm.warehouseSender}"
                        app:position="@={vm.selectedWarehouseSenderPosition}"
                        tools:entries="@array/storage_list" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

            <LinearLayout style="@style/LinearRowStyle">

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/storage_receiver" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <com.lenta.shared.view.ClickableSpinner
                        android:id="@+id/spin_storage_receiver"
                        style="@style/CellSpinnerStyle"
                        android:layout_height="match_parent"
                        app:items="@{vm.warehouseReceiver}"
                        app:position="@={vm.selectedWarehouseReceiverPosition}"
                        tools:entries="@array/storage_list" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:visibility="@{vm.proIncludeCond || vm.ZPartFlag}" />

            <LinearLayout
                style="@style/LinearRowStyle"
                android:visibility="@{vm.proIncludeCond || vm.ZPartFlag}">

                <LinearLayout style="@style/LinearCellStyle">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/container" />

                </LinearLayout>

                <View style="@style/VerticalDivider" />

                <LinearLayout style="@style/LinearCellStyle">

                    <EditText
                        style="@style/CellEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:paddingStart="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp"
                        android:text="@={vm.containerField}"
                        android:textSize="@dimen/text_14sp"
                        tools:text="123" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

        </LinearLayout>

    </FrameLayout>

</layout>