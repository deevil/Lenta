<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.defect_info.DefectInfoFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp16.features.defect_info.DefectInfoViewModel" />


    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Текущее количество -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <EditText
                    style="@style/CellEditTextStyle"
                    android:drawableEnd="@drawable/spinner_arrow_down_disabled"
                    android:enabled="false"
                    android:text="@{vm.quantityType}"
                    tools:text="Брак" />

            </LinearLayout>

            <View
                style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <com.lenta.shared.view.EditTextWithSuffix
                    style="@style/CellEditTextStyle"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:text="@={vm.weightField}"
                    app:digitsForUom="@{vm.good.units}"
                    app:maxLengthForScanProtect="@{6}"
                    app:suffix="@{vm.good.units.name}"
                    tools:text="0 кг" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />

        <!-- Общее количество -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@string/total" />

            </LinearLayout>

            <View
                style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{vm.totalWithUnits}"
                    tools:text="12 кг" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />

        <!-- Продукт для обработки -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="1">

                <com.lenta.shared.view.ClickableSpinner
                    android:id="@+id/spin_provider"
                    style="@style/CellSpinnerStyle"
                    android:layout_height="match_parent"
                    android:enabled="@{vm.providerEnabled}"
                    app:items="@{vm.providerList}"
                    app:onPositionClickListener="@{vm.onSelectProvider}"
                    app:position="@{vm.providerPosition}"
                    tools:entries="@array/test_list" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />

    </LinearLayout>


</layout>