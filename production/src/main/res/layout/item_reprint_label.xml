<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lenta.bp16.features.reprint_label.ReprintLabelUi" />

        <variable
            name="selectedForDelete"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/common_row_height"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellTextStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_border_circle_white_selectable_for_delete"
                    android:gravity="center"
                    android:text="@{item.position}"
                    app:selected="@{selectedForDelete}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_2">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text="@{item.name}"
                    app:zoom="@{true}"
                    tools:text="П/Ф Скумбрия непотр с/г вес 400-600 зам." />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_3">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_marginTop="5dp"
                    android:text="@{item.packNumber}"
                    app:zoom="@{true}"
                    tools:text="5566 БРАК" />

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{item.date}"
                    tools:text="18.03.20" />

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_marginBottom="5dp"
                    android:text="@{item.time}"
                    tools:text="01:56" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_4">

                <TextView
                    style="@style/CellTextStyle"
                    android:gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:text="@{item.quantity}"
                    tools:text="12.345 кг" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>