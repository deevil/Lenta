<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lenta.bp16.model.ingredients.ui.ItemTechOrderUi" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_five_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:text="@{item.position}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_five_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/CellTextStyle"
                        android:layout_width="match_parent"
                        android:text="@{item.text1}"
                        tools:text="3682194862 / 10.09.19" />

                    <TextView
                        style="@style/CellTextStyle"
                        android:layout_width="match_parent"
                        android:text="@{item.text2}"
                        app:zoom="@{true}"
                        tools:text="ООО Минторг" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_five_3"
                android:orientation="horizontal">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_width="match_parent"
                    android:text="@{item.plan}"
                    tools:text="3682194862" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>