<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/text_view_add_attribute"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/spinner_producer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:minLines="2"
            android:text="@string/text_add_attribute"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

    <View style="@style/HorizontalDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_add_attribute"
        app:layout_constraintBottom_toTopOf="@id/spinner_producer"/>


    <LinearLayout
        android:id="@+id/spinner_producer"
        style="@style/LinearRowStyle"
        app:layout_constraintBottom_toTopOf="@id/spinner_producer_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_add_attribute">

        <com.lenta.shared.view.ClickableSpinner
            style="@style/CellSpinnerStyle"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            tools:entries="@array/manufacturer_list" />

    </LinearLayout>

    <View style="@style/HorizontalDivider"
        app:layout_constraintTop_toBottomOf="@id/spinner_producer"
        app:layout_constraintBottom_toTopOf="@id/spinner_producer_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/spinner_producer_date"
        style="@style/LinearRowStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_producer">

        <LinearLayout
            style="@style/LinearCellStyle"
            android:layout_weight="1">

            <TextView
                style="@style/CellTextStyle"
                android:text="@string/text_production_date" />

        </LinearLayout>

        <View style="@style/VerticalDivider" />

        <LinearLayout
            style="@style/LinearCellStyle"
            android:layout_weight="1">

            <com.lenta.shared.view.EditTextWithSuffix
                style="@style/CellEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/size_10dp"
                android:paddingEnd="@dimen/size_10dp"
                android:textSize="@dimen/text_14sp"
                android:inputType="number"
                android:digits="0123456789."
                app:maskPattern='@{"[00]{.}[00]{.}[0000]"}'
                tools:text="21.06.2020"
                />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/HorizontalDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_producer_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>