<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lenta.bp16.features.raw_good_list.ItemRawGoodListUi" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sku_arrived_remain_column_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:text="@{item.position}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sku_arrived_remain_column_2"
                android:orientation="horizontal">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="@{item.sku}"
                    tools:text="000001 Форель замороженная" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sku_arrived_remain_column_3"
                android:orientation="horizontal">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{item.arrived}"
                    android:gravity="center"
                    tools:text="60 кг" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sku_arrived_remain_column_4">

                <TextView
                    style="@style/CellTextStyle"
                    android:gravity="center"
                    android:text="@{item.remain}"
                    tools:text="20 кг" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>