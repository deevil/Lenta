<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lenta.inventory.features.task_list.TaskItemVm" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:text='@{item.number}'
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CellTextStyle"
                        android:layout_width="wrap_content"
                        android:text="@{item.title}"
                        tools:text="ВИ-304-Акционка" />

                    <TextView
                        style="@style/CellTextStyle"
                        android:layout_width="wrap_content"
                        android:text="@{@string/stock_number(item.stock)}"
                        tools:text="Склад 0001" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_16dp" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_3"
                android:orientation="horizontal">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_border_circle_white"
                    android:gravity="center"
                    android:text='@{item.typeConversion}'
                    tools:text="2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock_status_gray_24dp"
                    app:statusTaskIcon='@{item.statusTask}' />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_two_4">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:text='@{item.count}'
                    tools:text="897" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>