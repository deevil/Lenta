<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/FirstRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_info_status_quantity_1">

                <TextView
                    style="@style/FirstRowTextStyle"
                    android:layout_width="wrap_content"
                    android:text="@string/number" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_info_status_quantity_2">

                <TextView
                    style="@style/FirstRowTextStyle"
                    android:text="@string/task" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_info_status_quantity_3">

                <TextView
                    style="@style/FirstRowTextStyle"
                    android:text="@string/tags" />

            </LinearLayout>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_info_status_quantity_4">

                <TextView
                    style="@style/FirstRowTextStyle"
                    android:text="@string/of_goods" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>