<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stock"
            type="com.lenta.bp14.models.ui.ItemStockUi" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_three_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellNumberStyle"
                    android:text="@{stock.number}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                android:id="@+id/layoutStorage"
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_three_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_storage_number"
                    style="@style/CellTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@{stock.storage}"
                    tools:text="0001"
                    tools:ignore="NestedWeights" />

                <ImageView
                    android:id="@+id/iv_open"
                    style="@style/OpenItemButton" />
            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_three_3">

                <TextView
                    android:id="@+id/tv_good_quantity"
                    style="@style/CellTextStyle"
                    android:text="@{stock.quantity}"
                    tools:text="25 шт." />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <!-- Dynamic field, if stock doesn't has z-parts, it doesn't need to how-->
            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_three_4"
                android:visibility="@{!stock.zPartsQuantity.isEmpty()}">

                <TextView
                    android:id="@+id/tv_good_zparts"
                    style="@style/CellTextStyle"
                    android:text="@{stock.zPartsQuantity}"
                    tools:text="45 шт." />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>