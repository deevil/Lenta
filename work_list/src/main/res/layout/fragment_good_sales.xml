<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout2"
        tools:context=".features.work_list.good_sales.GoodSalesFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp14.features.work_list.good_sales.GoodSalesViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Последняя продажа -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_1">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text="@string/date_and_time_last_sales" />

            </LinearLayout>

            <View
                style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_2">

                <TextView
                    android:id="@+id/tv_storage_places"
                    style="@style/CellTextStyle"
                    android:text="@{vm.salesStatistics.formattedDate}"
                    tools:text="05.09.19" />

                <TextView
                    android:id="@+id/tv_remaining_quantity"
                    style="@style/CellTextStyle"
                    android:text="@{vm.salesStatistics.formattedTime}"
                    tools:text="05:09" />


            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />


        <!-- Продажи за день -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_1">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text="@string/last_day_sales" />

            </LinearLayout>

            <View
                style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_2">

                <TextView
                    android:id="@+id/tv_removed_good"
                    style="@style/CellTextStyle"
                    android:text="@{@string/quantity_units(vm.salesStatistics.daySales, vm.good.uom.name)}"
                    tools:text="150 шт" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />


        <!-- Продажи за неделю -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_1">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text="@string/last_week_sales" />

            </LinearLayout>

            <View
                style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/sales_of_good_column_2">

                <TextView
                    android:id="@+id/tv_price_with_dk"
                    style="@style/CellTextStyle"
                    android:text="@{@string/quantity_units(vm.salesStatistics.weekSales, vm.good.uom.name)}"
                    tools:text="650 шт" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>