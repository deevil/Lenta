<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".features.good_info_work_list.GoodInfoWorkListFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp14.features.good_info_work_list.GoodInfoWorkListViewModel"/>

        <variable
            name="viewPagerSettings"
            type="com.lenta.shared.utilities.databinding.ViewPagerSettings"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Табы -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:pageSelectionListener="@{vm}"
            app:tabPosition="@{vm.selectedPage}"
            app:viewPagerSettings="@{viewPagerSettings}">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_strip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBottomPanelBackground"
                android:elevation="0dp"
                android:textSize="15sp"
                app:tabBackground="?selectableItemBackground"
                app:tabIndicatorColor="@color/colorTabIndicator"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorTabIndicator"
                app:tabTextAppearance="@style/TabLayoutStyle"
                app:tabTextColor="@color/colorWhite"
                tools:targetApi="lollipop"/>

        </androidx.viewpager.widget.ViewPager>


        <!-- Блок с кнопками -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dns_white_60dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</layout>