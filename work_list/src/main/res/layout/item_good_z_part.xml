<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="zPart"
            type="com.lenta.bp14.models.ui.ZPartUi" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_one_1">

                <TextView
                    style="@style/CellNumberStyle"
                    android:text="@{zPart.index}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_four_2">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{zPart.stock}"
                    tools:text="165832" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_four_3">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@{zPart.info}"
                    tools:text="2258\nПроизводитель 1\nДП:22.04.20 СГ:22.09.20" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/four_four_4">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{zPart.quantity}"
                    tools:text="15 шт" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>
</layout>