<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp14.features.not_exposed.good_info.GoodInfoNeViewModel" />

    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Количество -->
            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/quantity" />

                </LinearLayout>

                <View
                    style="@style/VerticalDivider" />

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="2">

                    <EditText
                        style="@style/CellTextStyle"
                        android:inputType="numberDecimal"
                        android:text="@={vm.quantityField}"
                        tools:text="0" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider" />


            <!-- Запас -->
            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/stock_one_storage" />

                </LinearLayout>

                <View
                    style="@style/VerticalDivider" />

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_removed_good"
                        style="@style/CellTextStyle"
                        android:text="@{@string/quantity_st(vm.good.firstStorageStock)}"
                        tools:text="25 шт." />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider" />


            <!-- Пустое место -->
            <LinearLayout
                style="@style/LinearRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="1">

                    <TextView
                        style="@style/CellTextStyle"
                        android:text="@string/empty_place" />

                </LinearLayout>

                <View
                    style="@style/VerticalDivider" />

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_price_with_dk"
                        style="@style/CellTextStyle"
                        android:maxLines="2"
                        android:text="@{vm.frameType}"
                        tools:text="" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider" />

        </LinearLayout>

    </ScrollView>

</layout>