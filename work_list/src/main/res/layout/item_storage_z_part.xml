<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="stock"
            type="com.lenta.bp14.models.ui.ZPartUi" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_three_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellNumberStyle"
                    android:text="@{stock.index}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_three_2">

                <TextView
                    android:id="@+id/tv_good_quantity"
                    style="@style/CellTextStyle"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@{stock.info}"
                    tools:text="информация о товаре" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_three_3">

                <TextView
                    android:id="@+id/tv_good_zparts"
                    style="@style/CellTextStyle"
                    android:text="@{stock.quantity}"
                    tools:text="45 шт." />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>