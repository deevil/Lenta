<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".features.price_check.good_info.GoodInfoPcFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp14.features.price_check.good_info.GoodInfoPcViewModel"/>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Оставшийся срок годности -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="Цена 1"/>

                <TextView
                    style="@style/CellTextStyle"
                    android:text="Цена 2"/>

            </LinearLayout>

            <View
                style="@style/VerticalDivider"/>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_total_shelf_life"
                    style="@style/CellTextStyle"
                    android:text="120 руб."/>

                <TextView
                    android:id="@+id/tv_shelf_life_days_left"
                    style="@style/CellTextStyle"
                    android:text="125 руб."
                    tools:text="5 сут."/>


            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider"/>


        <!-- Штрихкод -->
        <LinearLayout
            style="@style/LinearRowStyle">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="2">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="Цена 1 (Распродажа)"/>

                <TextView
                    style="@style/CellTextStyle"
                    android:text="Цена 1 (По акции)"/>

            </LinearLayout>

            <View
                style="@style/VerticalDivider"/>

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_barcode_number_units"
                    style="@style/CellTextStyle"
                    android:text="120 руб."/>

                <TextView
                    android:id="@+id/tv_gt_gz_numbers"
                    style="@style/CellTextStyle"
                    android:text="125 руб."/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider"/>

    </LinearLayout>


</layout>