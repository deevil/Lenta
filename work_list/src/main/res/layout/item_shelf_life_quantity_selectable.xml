<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="shelfLife"
            type="com.lenta.bp14.data.model.ShelfLife" />

        <variable
            name="selectedForDelete"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_shelf_life_quantity_column_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellTextStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_border_circle_white_selectable_for_delete"
                    android:gravity="center"
                    android:text="@{String.valueOf(shelfLife.id)}"
                    app:selected="@{selectedForDelete}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_shelf_life_quantity_column_2">

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{@string/shelf_life_date(shelfLife.formattedShelfLife)}"
                    tools:text="СГ - 12.11.13" />

                <TextView
                    style="@style/CellTextStyle"
                    android:text="@{@string/d_p_date(shelfLife.formattedPublicationDate)}"
                    android:visibility="@{shelfLife.publicationDate != null ? View.VISIBLE : View.GONE}"
                    tools:text="ДП - 24.07.18" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/number_shelf_life_quantity_column_3">

                <TextView
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{@string/quantity_st(shelfLife.quantity)}"
                    tools:text="10 шт" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>