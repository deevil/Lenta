<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp14.features.good_info.GoodInfoViewModel"/>

        <variable
            name="rvConfig"
            type="com.lenta.shared.utilities.databinding.DataBindingRecyclerViewConfig"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Наименования колонок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/good_provider_column_1">

                    <TextView
                        style="@style/ColumnTitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="0dp"
                        android:text="@string/number"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/good_provider_column_2">

                    <TextView
                        style="@style/ColumnTitleStyle"
                        android:text="@string/storage"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/good_provider_column_3">

                    <TextView
                        style="@style/ColumnTitleStyle"
                        android:text="@string/quantity"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"/>

        </LinearLayout>


        <!-- Список остатков -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:rv_config="@{rvConfig}"
            tools:listitem="@layout/item_stock"/>

    </LinearLayout>

</layout>