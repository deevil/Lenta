    <style name="llGoodsVer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle|end</item>
    </style>

    <style name="llGoodsHor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

