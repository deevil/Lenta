<resources>

    <style name="SupportTxtLTabRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SupportTxtDescrTabRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.67</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TaskCardTxtView">
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TaskCardValTxtView">
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TaskCardSpinner">
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="GoodsTableColNum">
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/colorViewTxt</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="GoodsTableColGoods">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
