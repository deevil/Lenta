<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopPanel"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@mipmap/logo_box" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/TopPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTopPanelBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ExitBtnImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="imgBtn_onClick"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/button_exit" />

        <ImageButton
            android:id="@+id/AuxiliaryMenuBtnImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="imgBtn_onClick"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ExitBtnImg"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/button_settings" />

        <TextView
            android:id="@+id/TitleTxtView"
            style="@style/TopPanelTxtTitle"
            android:text="@string/name_buisness_process"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/HeadTxtView"
            style="@style/TopPanelTxtHead"
            android:text="@string/acvtMain_HeadTxtView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TitleTxtView" />

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/CreateTaskBtnImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="imgBtn_onClick"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/button_create_task" />


</android.support.constraint.ConstraintLayout>