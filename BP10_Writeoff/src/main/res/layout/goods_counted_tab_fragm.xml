<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout">

        <TextView
            android:id="@+id/HeadNumGoodsTxtView"
            style="@style/GoodsTableColNum"
            android:text="№" />

        <TextView
            android:id="@+id/HeadGoodsTxtView"
            style="@style/GoodsTableColGoods"
            android:text="Товар" />

        <TextView
            android:id="@+id/HeadCountGoodsTxtView"
            style="@style/GoodsTableCol3"
            android:text="Количество" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:divider="@drawable/divider_horizontal"
        android:orientation="vertical"
        android:showDividers="beginning|middle"
        app:layout_constraintBottom_toTopOf="@+id/AddGoodsEditTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/GoodsRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>

    <EditText
        android:id="@+id/AddGoodsEditTxt"
        style="@style/SearchEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/acvtGoodsList_hintAddGoods"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <requestFocus></requestFocus>
    </EditText>

    <ImageView
        android:id="@+id/AddGoodsImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6sp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/AddGoodsEditTxt"
        app:layout_constraintEnd_toEndOf="@+id/AddGoodsEditTxt"
        app:layout_constraintTop_toTopOf="@+id/AddGoodsEditTxt"
        app:srcCompat="@mipmap/text_icon_add" />

</android.support.constraint.ConstraintLayout>
