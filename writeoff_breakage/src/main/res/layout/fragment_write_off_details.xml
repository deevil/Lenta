<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.write_off_details.WriteOffDetailsFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp10.features.write_off_details.WriteOffDetailsViewModel" />

        <variable
            name="rvConfig"
            type="com.lenta.shared.utilities.databinding.DataBindingRecyclerViewConfig" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_titles"
            layout="@layout/item_title_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:items="@{vm.items}"
            app:rv_config="@{rvConfig}"
            tools:listitem="@layout/item_tile_goods_reasons" />

    </LinearLayout>

</layout>