<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.fmp_settings.FmpSettingsFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp10.features.fmp_settings.FmpSettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/servers_address"
            app:layout_constraintBottom_toBottomOf="@+id/et_server_address"
            app:layout_constraintEnd_toStartOf="@+id/et_server_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_server_address"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/et_server_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="@={vm.serverAddress}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_server_address"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tv_environment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/environment"
            app:layout_constraintBottom_toBottomOf="@+id/et_environment"
            app:layout_constraintEnd_toStartOf="@+id/et_environment"
            app:layout_constraintStart_toStartOf="@+id/tv_server_address"
            app:layout_constraintTop_toTopOf="@+id/et_environment"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/et_environment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="@={vm.environment}"
            app:layout_constraintEnd_toEndOf="@+id/et_server_address"
            app:layout_constraintStart_toStartOf="@+id/et_server_address"
            app:layout_constraintTop_toBottomOf="@+id/et_server_address"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/project"
            app:layout_constraintBottom_toBottomOf="@+id/et_project"
            app:layout_constraintEnd_toStartOf="@+id/et_project"
            app:layout_constraintStart_toStartOf="@+id/tv_environment"
            app:layout_constraintTop_toTopOf="@+id/et_project" />

        <EditText
            android:id="@+id/et_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="@={vm.project}"
            app:layout_constraintEnd_toEndOf="@+id/et_environment"
            app:layout_constraintStart_toStartOf="@+id/et_environment"
            app:layout_constraintTop_toBottomOf="@+id/et_environment"
            tools:ignore="Autofill,LabelFor" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>