<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColumnVerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="LinearCellStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CellTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="CellTitleTextStyle" parent="CellTextStyle">
        <item name="android:textColor">@color/color_text_title_header</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>