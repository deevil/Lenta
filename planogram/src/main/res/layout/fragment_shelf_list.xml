<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".features.shelf_list.ShelfListFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp7.features.shelf_list.ShelfListViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Наименование колонок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/size_column_1">

                    <TextView
                        style="@style/CellTitleTextStyle"
                        android:text="@string/column_title_item_number"/>

                </LinearLayout>

                <View
                    style="@style/ColumnVerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/size_column_2">

                    <TextView
                        style="@style/CellTitleTextStyle"
                        android:text="@string/column_title_number_shelf_time"/>

                </LinearLayout>

                <View
                    style="@style/ColumnVerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/size_column_3">

                    <TextView
                        style="@style/CellTitleTextStyle"
                        android:text="@string/column_title_status"/>

                </LinearLayout>

                <View
                    style="@style/ColumnVerticalDivider"/>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/size_column_4">

                    <TextView
                        style="@style/CellTitleTextStyle"
                        android:text="@string/column_title_goods"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>

        </LinearLayout>

        <!-- Список полок -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_shelf"/>

        <!-- Поле ввода номера полки -->
        <EditText
            android:id="@+id/et_shelf_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/enter_shelf_number"
            android:inputType="numberDecimal"
            android:maxLength="3"
            tools:ignore="Autofill"/>

    </LinearLayout>

</layout>