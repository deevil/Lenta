<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.shelf_list.ShelfListFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp7.features.shelf_list.ShelfListViewModel" />

        <variable
            name="rvConfig"
            type="com.lenta.shared.utilities.databinding.DataBindingRecyclerViewConfig" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Наименование колонок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/FirstRowStyle">

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/four_one_1">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/column_title_item_number" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/four_one_2">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/column_title_number_shelf_time" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/four_one_3">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/column_title_status" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearCellStyle"
                    android:layout_weight="@integer/four_one_4">

                    <TextView
                        style="@style/FirstRowTextStyle"
                        android:text="@string/column_title_goods" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/HorizontalDivider" />

        </LinearLayout>

        <!-- Список полок -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:items="@{vm.shelves}"
            app:rv_config="@{rvConfig}"
            tools:listitem="@layout/item_shelf" />

        <!-- Поле ввода номера полки -->
        <LinearLayout style="@style/EnterNumberFieldLayout">

            <EditText
                android:id="@+id/et_shelf_number"
                style="@style/EnterNumberField"
                android:digits="0123456789"
                android:drawableEnd="@drawable/ic_add_white_16dp"
                android:enabled="@{vm.numberFieldEnabled}"
                android:hint="@string/enter_shelf_number"
                android:inputType="number"
                android:maxLength="12"
                android:text="@={vm.shelfNumber}"
                app:onOkInSoftKeyboard="@{vm}"
                app:requestFocus="@{vm.requestFocusToShelfNumber}"
                tools:ignore="Autofill" />

        </LinearLayout>

    </LinearLayout>

</layout>