<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.search_task.SearchTaskFragment">

    <data>
        <variable
            name="vm"
            type="com.lenta.bp9.features.task_card.TaskCardViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/div_hor_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_vert_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

        <View
            android:id="@+id/div_hor_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_vert_2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toTopOf="@id/div_hor_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_4" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintBottom_toTopOf="@id/div_hor_4"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_3"
            tools:src="@drawable/ic_down_arrow" />

        <TextView
            android:id="@+id/tv_status_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/current_status"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            app:layout_constraintBottom_toTopOf="@id/div_hor_2" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text='@{vm.currentStatus}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_status_caption" />

        <TextView
            android:id="@+id/tv_status_datetime_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/current_status_datetime"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3" />

        <TextView
            android:id="@+id/tv_status_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@{vm.currentStatusDateTime}"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_status_datetime_caption" />

        <TextView
            android:id="@+id/tv_next_status_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/new_status"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_4"
            app:layout_constraintBottom_toTopOf="@id/div_hor_5" />

        <TextView
            android:id="@+id/tv_next_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text='@{vm.nextStatus}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_next_status_caption" />

        <TextView
            android:id="@+id/tv_next_status_datetime_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/new_status_datetime"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_constraintBottom_toTopOf="@id/div_hor_5" />

        <TextView
            android:id="@+id/tv_next_status_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@{vm.nextStatusDateTime}"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_next_status_datetime_caption" />

        <ImageView
            android:id="@+id/imageViewIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_promo_task_icon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isPromo}'
            tools:src="@drawable/ic_promo_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_alco_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isAlco}'
            tools:src="@drawable/ic_alco_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_fruits_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isFruit}'
            tools:src="@drawable/ic_fruits_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_raw_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isRaw}'
            tools:src="@drawable/ic_raw_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_return_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isReturn}'
            tools:src="@drawable/ic_return_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_non_edi_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isNotEDI}'
            tools:src="@drawable/ic_non_edi_task_icon" />

        <ImageView
            android:id="@+id/imageViewIcon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_special_task_icon"
            app:layout_constraintStart_toEndOf="@id/imageViewIcon6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/div_hor_6"
            app:layout_goneMarginStart="20dp"
            app:visibleOrGone='@{vm.isSpecial}'
            tools:src="@drawable/ic_special_task_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>