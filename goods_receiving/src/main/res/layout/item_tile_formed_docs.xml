<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.lenta.bp9.features.formed_docs.FormedDocsItem" />

        <variable
            name="selectedForDelete"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_one_1">

                <TextView
                    android:id="@+id/tv_item_number"
                    style="@style/CellCircleNumberStyle"
                    android:background="@drawable/bg_border_circle_white_selectable_for_delete"
                    android:text='@{item.number + ""}'
                    app:selected="@{selectedForDelete}"
                    tools:text="1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_one_2">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text="@{item.name}"
                    tools:text="Ведомость примеки" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/three_one_3">

                <TextView
                    android:id="@+id/tv_plan"
                    style="@style/CellTextStyle"
                    android:layout_width="wrap_content"
                    android:text="@{item.supplyNumber}"
                    tools:text="2734534" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>