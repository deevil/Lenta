<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.goods_information.excise_alco_pge.excise_alco_box_acc_pge.excise_alco_box_card.ExciseAlcoBoxCardPGEFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp9.features.goods_information.excise_alco_pge.excise_alco_box_acc_pge.excise_alco_box_card.ExciseAlcoBoxCardPGEViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/div_hor1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/div_vert1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toBottomOf="@+id/div_hor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/div_hor1" />

        <com.lenta.shared.view.ClickableSpinner
            android:id="@+id/spinner_quality"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:onPositionClickListener="@{vm}"
            app:items="@{vm.spinQuality}"
            android:enabled="@{vm.enabledSpinQuality}"
            app:layout_constraintBottom_toBottomOf="@+id/et_count"
            app:layout_constraintEnd_toStartOf="@+id/div_vert1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_count"
            app:position="@{vm.spinQualitySelectedPosition}"
            tools:entries="@array/test_list" />

        <com.lenta.shared.view.EditTextWithSuffix
            android:id="@+id/et_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:enabled="@{vm.enabledETQuantity}"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:maxLines="1"
            android:text="@={vm.count}"
            app:digitsForUom="@{vm.productInfo.uom}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/div_vert1"
            app:layout_constraintTop_toTopOf="@+id/div_vert1"
            app:maxLengthForScanProtect="@{6}"
            app:suffix="@{vm.suffix}"
            tools:text="1 шт" />

        <ImageView
            android:id="@+id/imgUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="@{vm.visibilityImgUnit}"
            android:onClick="@{(v) -> vm.onClickUnitChange()}"
            android:src="@{vm.isEizUnit ? @drawable/ic_eiz_white_24dp : @drawable/ic_bei_white_24dp}"
            app:layout_constraintBottom_toBottomOf="@+id/et_count"
            app:layout_constraintEnd_toEndOf="@+id/et_count"
            app:layout_constraintTop_toTopOf="@+id/et_count"
            tools:src="@drawable/ic_eiz_white_24dp"/>

        <ImageView
            android:id="@+id/imgUnitDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="@{!vm.visibilityImgUnit}"
            android:src="@{vm.isEizUnit ? @drawable/ic_eiz_disabled_24dp : @drawable/ic_bei_disabled_24dp}"
            app:layout_constraintBottom_toBottomOf="@+id/et_count"
            app:layout_constraintEnd_toEndOf="@+id/et_count"
            app:layout_constraintTop_toTopOf="@+id/et_count"
            tools:src="@drawable/ic_eiz_white_24dp"/>

        <View
            android:id="@+id/div_hor2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_count" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintEIZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vm.isEizUnit &amp;&amp; !vm.isDefect}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/div_hor2">

            <View
                android:id="@+id/div_vert2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="@+id/div_hor4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/div_hor3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_stamp_control"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@string/stamps_control"
                app:layout_constraintBottom_toBottomOf="@+id/tv_stamp_control_val"
                app:layout_constraintEnd_toStartOf="@+id/div_vert2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_stamp_control_val" />

            <TextView
                android:id="@+id/tv_stamp_control_val"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.tvStampControlVal}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBox_stamp_control"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1 кор х 2" />

            <CheckBox
                android:id="@+id/checkBox_stamp_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{vm.checkStampControl}"
                android:enabled="false"
                android:visibility="@{vm.checkStampControlVisibility}"
                app:layout_constraintStart_toEndOf="@+id/div_vert2"
                app:layout_constraintTop_toTopOf="@+id/div_vert2" />

            <View
                android:id="@+id/div_hor3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_stamp_control_val" />

            <TextView
                android:id="@+id/tv_box_control"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@string/box_control"
                app:layout_constraintBottom_toBottomOf="@+id/tv_box_control_val"
                app:layout_constraintEnd_toStartOf="@+id/div_vert2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_box_control_val" />

            <CheckBox
                android:id="@+id/checkBox_box_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{vm.checkBoxControl}"
                android:enabled="false"
                android:visibility="@{vm.checkBoxControlVisibility}"
                app:layout_constraintStart_toEndOf="@+id/div_vert2"
                app:layout_constraintTop_toBottomOf="@+id/div_hor3" />

            <TextView
                android:id="@+id/tv_box_control_val"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.tvBoxControlVal}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBox_box_control"
                app:layout_constraintTop_toBottomOf="@+id/div_hor3"
                tools:text="Не требуется" />

            <View
                android:id="@+id/div_hor4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_box_control_val" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintBEI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{!vm.isEizUnit}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ConstraintEIZ">

            <View
                android:id="@+id/div_vert4"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="@+id/div_hor7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/div_hor8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_list_stamp"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@string/list_stamp"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_list_stamp"
                app:layout_constraintEnd_toStartOf="@+id/div_vert4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/checkBox_list_stamp" />

            <TextView
                android:id="@+id/tv_list_stamp_val"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.tvListStampVal}"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_list_stamp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBox_list_stamp"
                app:layout_constraintTop_toTopOf="@+id/checkBox_list_stamp"
                tools:text="0 из 0"/>

            <CheckBox
                android:id="@+id/checkBox_list_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{vm.checkBoxStampList}"
                android:enabled="false"
                app:layout_constraintStart_toEndOf="@+id/div_vert4"
                app:layout_constraintTop_toTopOf="@+id/div_vert4" />

            <View
                android:id="@+id/div_hor8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_list_stamp" />

            <TextView
                android:id="@+id/tv_box_total"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@string/box_total"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_box_total"
                app:layout_constraintEnd_toStartOf="@+id/div_vert4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/checkBox_box_total" />

            <TextView
                android:id="@+id/tv_box_total_val"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{vm.tvBoxTotalVal}"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox_box_total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkBox_box_total"
                app:layout_constraintTop_toTopOf="@+id/checkBox_box_total"
                tools:text="0 из 6"/>

            <CheckBox
                android:id="@+id/checkBox_box_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{vm.checkBoxTotal}"
                android:enabled="false"
                app:layout_constraintStart_toEndOf="@+id/div_vert4"
                app:layout_constraintTop_toBottomOf="@+id/div_hor8" />

            <View
                android:id="@+id/div_hor7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_box_total" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintNorm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{!vm.isDefect}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ConstraintBEI">

            <TextView
                android:id="@+id/tv_bottling_date"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:text="@{vm.tvBottlingDate}"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_bottling_date"
                app:layout_constraintEnd_toStartOf="@+id/div_vert3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spinner_bottling_date"
                tools:text="Дата розлива" />

            <View
                android:id="@+id/div_hor5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_manufacturers" />

            <View
                android:id="@+id/div_hor6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_bottling_date" />

            <View
                android:id="@+id/div_vert3"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="@+id/div_hor6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/div_hor5"
                app:layout_constraintTop_toBottomOf="@+id/div_hor5" />

            <com.lenta.shared.view.ClickableSpinner
                android:id="@+id/spinner_bottling_date"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:items="@{vm.spinBottlingDate}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/div_vert3"
                app:layout_constraintTop_toBottomOf="@+id/div_hor5"
                app:position="@{vm.spinBottlingDateSelectedPosition}"
                tools:entries="@array/test_list" />

            <com.lenta.shared.view.ClickableSpinner
                android:id="@+id/spinner_manufacturers"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:items="@{vm.spinManufacturers}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="@{vm.spinManufacturersSelectedPosition}"
                tools:entries="@array/test_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Блок с иконками -->
        <LinearLayout
            style="@style/BottomIconBarStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View style="@style/BottomIconEmptyPlaceStyle" />

            <View style="@style/BottomIconEmptyPlaceStyle" />

            <View style="@style/BottomIconEmptyPlaceStyle" />

            <View style="@style/BottomIconEmptyPlaceStyle" />

            <View style="@style/BottomIconEmptyPlaceStyle" />

            <ImageView
                style="@style/BottomIconStyle"
                android:onClick="@{(v) -> vm.scanMark1()}"
                android:src="@drawable/ic_scan_box_white_32dp" />

            <ImageView
                style="@style/BottomIconStyle"
                android:onClick="@{(v) -> vm.scanMark2()}"
                android:src="@drawable/ic_scan_barcode_es_white_32dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>