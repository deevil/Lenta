<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lenta.bp9.features.input_outgoing_fillings.InputOutgoingFillingsItem" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/two_two_1">

                <TextView
                    style="@style/CellTextStyle"
                    android:maxLines="2"
                    android:text='@{@string/outgoing_filling + " " + item.number}'
                    tools:text="Исходящая пломба 1" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/LinearCellStyle"
                android:layout_weight="@integer/two_two_2">

                <com.lenta.shared.view.EditTextWithSuffix
                    android:id="@+id/et_quantity"
                    style="@style/CellEditTextStyle"
                    android:inputType="textNoSuggestions|numberDecimal"
                    android:maxLines="1"
                    android:text="@={item.outgoingFillingNumber}"
                    app:maxLengthForScanProtect="@{11}"
                    tools:text="1234567890" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/HorizontalDivider" />

    </LinearLayout>

</layout>