<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.revise.invoice.InvoiceReviseFragment">

    <data>
        <variable
            name="vm"
            type="com.lenta.bp9.features.revise.invoice.InvoiceReviseViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:checked="@={vm.headerCheck}"
            android:enabled="@{!vm.isNumInvEmty}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/div_hor_3"
            app:layout_constraintVertical_bias="1.0"
            tools:checked="true" />

        <EditText
            android:id="@+id/et_ttn_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:enabled="@{vm.editingAvailable}"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={vm.numberTTN}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/div_vert_1"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            tools:ignore="Autofill"
            tools:text="1234321" />

        <EditText
            android:id="@+id/et_days"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:enabled="@{vm.editingAvailable}"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={vm.days}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toStartOf="@id/tv_dot1"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            tools:ignore="Autofill"
            tools:text="DD" />

        <EditText
            android:id="@+id/et_months"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:enabled="@{vm.editingAvailable}"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={vm.months}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toStartOf="@id/tv_dot2"
            app:layout_constraintStart_toEndOf="@id/tv_dot1"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            tools:ignore="Autofill"
            tools:text="MM" />

        <EditText
            android:id="@+id/et_years"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:enabled="@{vm.editingAvailable}"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLength="2"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@={vm.years}"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintStart_toEndOf="@id/tv_dot2"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            tools:ignore="Autofill"
            tools:text="YY" />

        <TextView
            android:id="@+id/tv_ttn_number_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/numberTN_TTN"
            app:layout_constraintBottom_toTopOf="@id/div_hor_2"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1" />


        <TextView
            android:id="@+id/tv_date_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/dateTN_TTN"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2" />

        <TextView
            android:id="@+id/tv_dot1"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="."
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toStartOf="@id/et_months"
            app:layout_constraintStart_toEndOf="@id/et_days"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            tools:text="." />

        <TextView
            android:id="@+id/tv_dot2"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="."
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toStartOf="@id/et_years"
            app:layout_constraintStart_toEndOf="@id/et_months"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            tools:text="." />

        <TextView
            android:id="@+id/tv_ttn_type"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/typeTN_TTN"
            app:layout_constraintBottom_toTopOf="@id/div_hor_4"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_3" />

        <TextView
            android:id="@+id/tv_ttn_type_val"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@{vm.typeTTN}"
            app:layout_constraintBottom_toTopOf="@id/div_hor_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/div_vert_1"
            app:layout_constraintTop_toBottomOf="@id/div_hor_3"
            tools:text="Бумажная" />

        <TextView
            android:id="@+id/tv_check_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/revise"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/cb_checked"
            app:layout_constraintEnd_toStartOf="@+id/cb_checked"
            app:layout_constraintTop_toTopOf="@id/cb_checked" />

        <View
            android:id="@+id/div_hor_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/div_hor_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="66dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

        <View
            android:id="@+id/div_hor_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="66dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2" />

        <View
            android:id="@+id/div_hor_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="66dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_3" />

        <View
            android:id="@+id/div_vert_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toTopOf="@id/div_hor_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>