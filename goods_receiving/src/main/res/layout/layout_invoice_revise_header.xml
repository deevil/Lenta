<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.revise.invoice.InvoiceReviseFragment">

    <data>
        <variable
            name="vm"
            type="com.lenta.bp9.features.revise.invoice.InvoiceReviseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <View
            android:id="@+id/div_hor_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_hor_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_divider"
            android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/div_vert_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_divider"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

        <TextView
            android:id="@+id/tv_ttn_number_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/invoice_number"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            app:layout_constraintBottom_toTopOf="@id/div_hor_2" />


        <EditText
            android:id="@+id/et_ttn_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="18sp"
            android:text="@={vm.numberTTN}"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:enabled="@{vm.editingAvailable}"
            app:layout_constraintStart_toEndOf="@id/div_vert_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_1"
            app:layout_constraintBottom_toTopOf="@id/div_hor_2"
            tools:ignore="Autofill"
            tools:text="1234321" />

        <TextView
            android:id="@+id/tv_date_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="@string/invoice_date"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3" />

        <TextView
            android:id="@+id/tv_dot1"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="."
            app:layout_constraintStart_toEndOf="@id/et_days"
            app:layout_constraintEnd_toStartOf="@id/et_months"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            tools:text="."/>

        <TextView
            android:id="@+id/tv_dot2"
            android:layout_width="16dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="."
            app:layout_constraintStart_toEndOf="@id/et_months"
            app:layout_constraintEnd_toStartOf="@id/et_years"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            tools:text="."/>

        <EditText
            android:id="@+id/et_days"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLines="1"
            android:maxLength="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@={vm.days}"
            android:layout_marginStart="22dp"
            android:enabled="@{vm.editingAvailable}"
            app:layout_constraintEnd_toStartOf="@id/tv_dot1"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            tools:ignore="Autofill"
            tools:text = "DD"/>

        <EditText
            android:id="@+id/et_months"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLines="1"
            android:maxLength="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@={vm.months}"
            android:enabled="@{vm.editingAvailable}"
            app:layout_constraintStart_toEndOf="@id/tv_dot1"
            app:layout_constraintEnd_toStartOf="@id/tv_dot2"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            tools:ignore="Autofill"
            tools:text="MM" />

        <EditText
            android:id="@+id/et_years"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions|numberDecimal"
            android:maxLines="1"
            android:maxLength="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@={vm.years}"
            android:enabled="@{vm.editingAvailable}"
            app:layout_constraintTop_toBottomOf="@id/div_hor_2"
            app:layout_constraintBottom_toTopOf="@id/div_hor_3"
            app:layout_constraintStart_toEndOf="@id/tv_dot2"
            tools:ignore="Autofill"
            tools:text="YY"/>

        <CheckBox
            android:id="@+id/cb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:layout_marginEnd="56dp"
            android:checked="@={vm.headerCheck}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:checked="true" />

        <TextView
            android:id="@+id/tv_check_caption"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@string/revise"
            app:layout_constraintEnd_toStartOf="@+id/cb_checked"
            app:layout_constraintTop_toTopOf="@id/cb_checked"
            app:layout_constraintBottom_toBottomOf="@id/cb_checked" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>