<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.task_list.TaskListFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp9.features.task_list.TaskListViewModel" />

        <variable
            name="rvConfig"
            type="com.lenta.shared.utilities.databinding.DataBindingRecyclerViewConfig" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Наименования колонок -->
        <include
            layout="@layout/item_title_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Список элементов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:items="@{vm.tasksSearch}"
            app:rv_config="@{rvConfig}"
            tools:listitem="@layout/item_tile_tasks" />

        <!-- Ввод номера -->
        <LinearLayout style="@style/EnterNumberFieldLayout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableEnd="@drawable/ic_filter_white_16dp"
                android:ellipsize="end"
                android:hint="@string/filter_hint"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:maxLines="1"
                android:text="@={vm.filterSearch}"
                app:cursorToLastPos="@{true}"
                app:onOkInSoftKeyboard="@{vm}"
                app:requestFocus="@{vm.requestFocusToFilter}"
                tools:ignore="Autofill" />

        </LinearLayout>

    </LinearLayout>

</layout>