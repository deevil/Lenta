<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.driver_data.DriverDataFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp9.features.driver_data.DriverDataViewModel" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="22dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/enter_driver_data_and_car"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <View
                android:id="@+id/div_hor_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/div_hor_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="66dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

            <View
                android:id="@+id/div_hor_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="66dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_2" />

            <View
                android:id="@+id/div_hor_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="66dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_3" />

            <View
                android:id="@+id/div_hor_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="66dp"
                android:background="@color/color_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_4" />

            <View
                android:id="@+id/div_vert_1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toTopOf="@id/div_hor_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

            <TextView
                android:id="@+id/tv_initials_driver"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/initials_driver"
                app:layout_constraintBottom_toTopOf="@id/div_hor_2"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_1" />

            <EditText
                android:id="@+id/et_initials_driver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@={vm.initials}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_initials_driver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_passport_data"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/passport_data"
                app:layout_constraintBottom_toTopOf="@id/div_hor_3"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_2" />

            <EditText
                android:id="@+id/et_passport_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@={vm.passportData}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_passport_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_car_make"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/car_make"
                app:layout_constraintBottom_toTopOf="@id/div_hor_4"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_3" />

            <EditText
                android:id="@+id/et_car_make"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@={vm.carMake}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_car_make"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_car_number"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:text="@string/car_number"
                app:layout_constraintBottom_toTopOf="@id/div_hor_5"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div_hor_4" />

            <EditText
                android:id="@+id/et_car_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@={vm.carNumber}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_car_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                tools:ignore="Autofill" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>