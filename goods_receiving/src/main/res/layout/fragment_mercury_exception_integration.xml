<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.mercury_exception_integration.MercuryExceptionIntegrationFragment">

    <data>

        <variable
            name="vm"
            type="com.lenta.bp9.features.mercury_exception_integration.MercuryExceptionIntegrationViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/mercury_exception_integration_header"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/mercury_exception_integration_header" />

        <com.lenta.shared.view.ClickableSpinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="22dp"
            app:items="@{vm.spinReasonsExclusion}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header"
            app:onPositionClickListener="@{vm}"
            app:position="@{vm.selectedPosition}"
            tools:entries="@array/test_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>